@page
@model CookieSample.Pages.IE.WindowOpenModel
@{
    ViewData["Title"] = "window.open()";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12 mb-4">
    <h2>fullscreen=yes</h2>
        <pre class="prettyprint lang-js">
        window.open(
            "https://localhost:5001/Contact",
            "subWindow",
            "fullscreen=yes"
        );</pre>
        <button type="button" class="btn btn-secondary" onClick="openWin()">Open</button>　　
    </div>
</div>

@section Scripts {
<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>
<script type="text/javascript">
    function openWin() {
        window.open(
            "https://localhost:5001/Contact",
            "subWindow",
            "fullscreen=yes"
        );
    }
</script>
}
